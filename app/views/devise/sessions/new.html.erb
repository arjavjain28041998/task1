<div class="container bg-white pb-5">
    <div class="row d-flex justify-content-start align-items-center mt-sm-5">
       

        </div>
        <div class="col-lg-4 offset-lg-2 col-md-6 offset-md-3">
           
            <div class="mt-3 mt-md-5">

            <h2>Log in</h2>

           <%= form_for(resource, as: resource_name, url: session_path(resource_name),:class => "pt-4") do |f| %>
                      <div class="d-flex flex-column pb-3">
                        <%= f.label :email %><br />
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class =>"border-bottom border-primary"%>
                      </div>

                      <div class="d-flex flex-column pb-3">
                        <%= f.label :password %><br />
                        <%= f.password_field :password, autocomplete: "current-password", :class => "border-bottom border-primary"%>
                      </div>

                      <% if devise_mapping.rememberable? %>
                        <div class="field">
                          <%= f.check_box :remember_me %>
                          <%= f.label :remember_me, :class =>"d-flex flex-column pb-3"%>
                        </div>
                      <% end %>

                      <div class="actions">
                        <%= f.submit "Log in", :class => "btn btn-primary btn-block mb-3"%>
                      </div>

                      
                    <% end %>
                    <br>
                    <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      



